<% layout("/layouts/boilerplate") %>
<body>


    <div class="index-main">
        <%  for(let car of allCars){ %>
            <a href="/cars/<%=car._id%>">
            <div class="card" style="width: 18rem;">
              <% if (car.image && car.image.length > 0) { %>
        <img src="<%=car.image[0].url%>" class="card-img-top" alt="car_img" >
        <% } else { %>
          <div class="show-image">
            <p>No image available</p>
          </div>
        <% } %>
        <div class="card-body p-3">
          <p class="card-title"><b><%=car.title%></b></p><br/>
            <p class="card-description"><%=car.description%></p><br/>
             <p class="card-price"> &#8377; <%=car.price.toLocaleString("en-IN")%></p>
        </div>
      </div>
    </a>
      <%    }  %>
</div>

      <br/>
    <form action="/cars/new">
        <div class="btn-new">
        <button>Add New Car</button>
    </div>
    </form>
    <br/><br/><br/><br/>
</body>
